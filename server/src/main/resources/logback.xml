<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="WARN">
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="nl.ordina.robotics" level="DEBUG" />
    <logger name="nl.ordina.robotics.server.web" level="DEBUG" />
    <logger name="nl.ordina.robotics.server.robot.RobotVerticle" level="DEBUG" />
    <logger name="nl.ordina.robotics.server.transport.cli" level="INFO" />
    <logger name="nl.ordina.robotics.server.network.ssh" level="INFO" />
    <logger name="io.opentelemetry" level="ERROR" />
</configuration>
